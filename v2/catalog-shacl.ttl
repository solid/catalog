  sh:targetClass ex:Organization ;
  sh:name "Organization"@en ;
  sh:property [
    sh:name "name"@en ;
    sh:path ex:name ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1
  ], [
    sh:name "subtype" ;
    sh:path ex:subType ;
    sh:minCount 1 ;
